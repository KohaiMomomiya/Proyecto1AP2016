<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.dynamic_softworks.icost">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".SplashScreenActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".ActivityLogin"
                android:label="@string/title_activity_login">
        </activity>
        <activity
                android:name=".ActivityNuevoUsuario"
                android:label="@string/title_activity_nuevo_usuario"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ActivityNuevoProyecto"
                android:label="@string/title_activity_nuevo_proyecto"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ActivityNuevaTarea"
                android:label="@string/title_activity_nueva_tarea"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ActivityNuevoUserStory"
                android:label="@string/title_activity_activity_nuevo_user_story"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ActivityInfoUserStory"
                android:label="@string/title_activity_activity_info_user_story"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ActivityInfoSprint"
                android:label="@string/title_activity_activity_info_sprint"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ActivityInfoRelease"
                android:label="@string/title_activity_activity_info_releases"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ActivityNuevoSprint"
                android:label="@string/title_activity_activity_nuevo_sprint"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ActivtiyListaUserStoriesProyecto"
                android:label="@string/title_activity_activtiy_user_stories_proyecto"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ActivityListaUsuariosProyecto"
                android:label="@string/title_activity_activity_usuarios_proyecto"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ActivityInfoProyecto"
                android:label="@string/title_activity_activity_info_proyecto"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ActivityListaUsuarios"
                android:label="@string/title_activity_activity_lista_usuarios"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ActivityListaReleasesProyecto"
                android:label="@string/title_activity_activity_lista_releases_proyecto"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ActivityNuevoRelease"
                android:label="@string/title_activity_activity_nuevo_release"
                android:parentActivityName=".ActivityInfoProyecto"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="io.dynamic_softworks.icost.ActivityInfoProyecto"/>
        </activity>
    </application>

</manifest>